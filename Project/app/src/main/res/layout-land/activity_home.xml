<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="100dp"
    android:background="#ffd700"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/titreAppli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="FreshProx"
            android:layout_centerHorizontal="true"
            android:textSize="32dp"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/titreAppli"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/google_connection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se connecter avec un compte Google"
            android:layout_below="@+id/image"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background = "@drawable/roundedbutton"/>

        <Button
            android:id="@+id/guest_connection_button"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se connecter en tant qu'invitÃ©"
            android:layout_below="@id/google_connection_button"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background = "@drawable/roundedbutton"/>

</RelativeLayout>