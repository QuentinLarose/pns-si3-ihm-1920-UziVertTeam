<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffd700"
    android:gravity="center_horizontal">
        <TextView
            android:id="@+id/titreAppli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="FreshProx"
            android:layout_centerHorizontal="true"
            android:textSize="32dp"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/titreAppli"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            />

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/google_connection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se connecter avec un compte Google"
            android:layout_below="@+id/image"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_margin="30dp"
            android:background = "@drawable/roundedbutton"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/guest_connection_button"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se connecter en tant qu'invitÃ©"
            android:layout_below="@id/google_connection_button"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_margin="30dp"
            android:background = "@drawable/roundedbutton"
            android:layout_weight="1"/>

</LinearLayout>