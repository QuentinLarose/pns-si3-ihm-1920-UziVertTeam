<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1.0">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Ajout d'un commerce"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintWidth_percent="0.5"
    android:text="Nom du producteur :"
    android:textAlignment="center"
    android:id="@+id/producerName"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


    <EditText
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginTop="15dp"
        android:id="@+id/producerNameInput"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/producerName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.5"
        android:text="Description :"
        android:textAlignment="center"
        android:id="@+id/producerDes"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/producerNameInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <EditText
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginTop="15dp"
        android:id="@+id/producerDesInput"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"

        app:layout_constraintTop_toBottomOf="@id/producerDes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>